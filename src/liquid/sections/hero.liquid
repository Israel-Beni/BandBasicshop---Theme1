{% render 'hero' with {
        settings: section.settings,
        id: section.id
    }
%}

{% schema %}
    {
        "name": "Hero",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "New heading"
            },

            {
                "type": "textarea",
                "id": "body",
                "label": "Body Copy",
                "default": "For the entirety of my adult life, I have identified as a bohemian wanderer. I wandered through my university career, earning three degrees while making my way through Europe, Latin America, Africa, and the U.S."
            },

            {
                "type": "url",
                "id": "link_url",
                "label": "Link URL"
            },

            {
                "type": "text",
                "id": "link_text",
                "label": "Link Text",
                "default": "Click for a test"
            },

            {
                "type": "image_picker",
                "id": "small_image",
                "label": "Small Image",
                "info": "Dimensions: 768Ã—768 px"
            },

            {
                "type": "image_picker",
                "id": "large_image",
                "label": "Large Image"
            },

            {
                "type": "select",
                "label": "Alignment",
                "id": "alignment",
                "default": "left",
                "options": [
                    {
                        "label": "Left",
                        "value": "left"
                    },

                    {
                        "label": "Center",
                        "value": "center"
                    },

                    {
                        "label": "Right",
                        "value": "right"
                    }
                ]
            }
        ],

        "presets": [
            {
                "name": "Hero",
                "category": "Image w/ text"
            }
        ]
    }
{% endschema %}